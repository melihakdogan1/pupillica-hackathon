{
  "name": "ilacasistan",
  "description": "İlaç Asistanı - TİTCK İlaç ve Tıbbi Ürün Bilgi Sistemi",
  "runtime": "python-3.11",
  "build": {
    "commands": [
      "pip install -r requirements.txt"
    ]
  },
  "deploy": {
    "startCommand": "uvicorn search_api:app --host=0.0.0.0 --port=$PORT",
    "healthcheckPath": "/health"
  },
  "env": {
    "PYTHONPATH": "/app"
  }
}